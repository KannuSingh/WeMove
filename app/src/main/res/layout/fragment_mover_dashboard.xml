<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/card_bg">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:padding="16dp"
    tools:context=".ui.mover.MoverDashboardFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_find_move_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true"
        android:elevation="11dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/find_move_image"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:textSize="24sp"
                android:paddingHorizontal="11dp"
                android:text=" Find Move Requests"
                app:drawableLeftCompat="@drawable/ic_baseline_search_black_24" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_my_move_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        android:layout_below="@id/card_find_move_request"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true"
        android:elevation="11dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/fav_move_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:textSize="24sp"
                android:paddingHorizontal="11dp"
                android:text=" My Move Requests"
                app:drawableLeftCompat="@drawable/ic_baseline_favorite_border_black_24" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_history_move_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/white"
        android:layout_below="@id/card_my_move_request"
        app:cardUseCompatPadding="true"
        android:elevation="11dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/history_move_image" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:textSize="24sp"
                android:paddingHorizontal="11dp"
                android:text=" Completed Move Requests"
                app:drawableLeftCompat="@drawable/ic_baseline_history_black_24" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
</ScrollView>
</layout>