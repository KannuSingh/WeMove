<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.customer.MyMoveRequestsFragment"
    >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/text"
            android:text="My Move Requests" />

        <Button
            android:id="@+id/new_move_request"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/button_primary"
            android:text="Create new Request" />

    <TextView
        android:id="@+id/no_move_requests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="@color/text"
        android:visibility="gone"
        android:text="No Move Requests Found" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_move_requests_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
        </ScrollView>





</LinearLayout>
</layout>